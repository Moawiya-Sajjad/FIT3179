{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "ne_10m_ocean.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_ocean"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "ne_110m_graticules_30.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "data/world_population.csv"
                        },
                        "key": "Country/Territory",
                        "fields": [
                            "2022 Population"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "2022 Population",
                    "type": "quantitative",
                    "title": "World Population",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1000000,      
                            10000000,     
                            50000000,
                            75000000,     
                            287500000,    
                            500000000,
                            750000000,
                            1000000000     
                        ],                        
                        "range": ["#FFD6D6", "#FFC2C2", "#FFAFAF", "#FF8A8A","#FF6666", "#FF5252", "#B00020", "#7B0000"]
                        
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "2022 Population",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}
